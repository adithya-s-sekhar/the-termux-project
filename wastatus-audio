#!/data/data/com.termux/files/usr/bin/bash
# Author: Adithya S Sekhar
# WaStatus - Audio Module

wa_aud=
wa_img=
wa_start=
wa_end=
wa_out=
wa_scale=
wa_scalew=
wa_scaleh=
wa_maxdata=

clear
banner
wastatus-banner

echo 'Audio Status'
echo '------------'
echo ''
echo 'Input audio: '
read wa_aud
echo ''
echo "Background image ('cover' to select albumart): "
read wa_img
echo ''
echo 'Start time: '
read wa_start
echo ''
echo 'End time: '
read wa_end
echo ''
echo 'Max datarate (KBps): '
read wa_maxdata
wa_maxdata=$((wa_maxdata*8-64))
wa_maxdata=$wa_maxdata
wa_maxdata=$wa_maxdata
echo ''
echo 'Output filename (with ext): '
read wa_out
echo ''

echo 'Resize video (y/n): '
read wa_scale
echo ''
if [ $wa_scale = "n" ]
then
if [ $wa_img = "cover" ]
then
ffmpeg -i $wa_aud -an tmp.jpg
ffmpeg -loop 1 -i tmp.jpg -i $wa_aud -ss $wa_start -to $wa_end -c:v libx264 -preset faster -crf 18 -maxrate:v $wa_maxdata -bufsize $wa_maxdata -movflags +faststart -tune fastdecode -tune zerolatency -pix_fmt yuv420p -c:a aac -b:a 64k -shortest $wa_out
rm tmp.jpg
else
	ffmpeg -loop 1 -i $wa_img -i $wa_aud -ss $wa_start -to $wa_end -c:v libx264 -preset faster -crf 18 -maxrate:v $wa_maxdata -bufsize $wa_maxdata -movflags +faststart -tune fastdecode -tune zerolatency -pix_fmt yuv420p -c:a aac -b:a 64k -shortest $wa_out
fi
elif [ $wa_scale = "y" ]
then
	echo 'Resize Width: '
	read wa_scalew
	echo ''
	echo 'Resize Height: '
	read wa_scaleh
	echo ''
	if [ $wa_img = "cover" ]
then
ffmpeg -i $wa_aud -an tmp.jpg
ffmpeg -loop 1 -i tmp.jpg -i $wa_aud -ss $wa_start -to $wa_end -c:v libx264 -preset faster -crf 18 -maxrate:v $wa_maxdata -bufsize $wa_maxdata -movflags +faststart -tune fastdecode -tune zerolatency -pix_fmt yuv420p -vf "scale=$wa_scalew:$wa_scaleh" -c:a aac -b:a 64k -shortest $wa_out
rm tmp.jpg
else
	ffmpeg -loop 1 -i $wa_img -i $wa_aud -ss $wa_start -to $wa_end -c:v libx264 -preset faster -crf 18 -maxrate:v $wa_maxdata -bufsize $wa_maxdata -movflags +faststart -tune fastdecode -tune zerolatency -pix_fmt yuv420p -vf "scale=$wa_scalew:$wa_scaleh" -c:a aac -b:a 64k -shortest $wa_out
fi
fi
