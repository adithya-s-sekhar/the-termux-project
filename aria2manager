#!/data/data/com.termux/files/usr/bin/bash
# Author: Adithya S Sekhar
# aria2 Manager

url=
file=

clear
banner

echo '-------------------------------------------'
echo '               aria2 Manager'
echo ' Downloads are in Internal Storage/Download'
echo '-------------------------------------------'

echo 'Enter URL: '
read url
echo 'Enter filename: '
read file

while [ 1 ]
do
	aria2c -d Download -c -x 4 -k 4M -o "$file" "$url" && break;
done
