#!/data/data/com.termux/files/usr/bin/bash
# Author: Adithya S Sekhar
# Initial Date: 09/May/2020
# Current Date: 09/May/2020
# aria2 Manager

url=
file=

clear
banner

echo '-----------------------------------'
echo '    aria2 Manager'
echo '-----------------------------------'

echo 'Enter URL: '
read url
echo 'Enter filename: '
read file

while [ 1 ]
do
	aria2c -d Download -c -x 4 -k 4M -o "$file" "$url" && break;
done
