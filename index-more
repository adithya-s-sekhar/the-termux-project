#!/data/data/com.termux/files/usr/bin/bash
# Author: Adithya S Sekhar
# More page

ETC=~/../usr/etc

clear
banner

echo ''
echo 'Current release: v0.1 - 16/Aug/2020'
echo ''
echo 'Changelog of current version'
echo '* improve wastatus encoding performance by 50% and reduced output file size (ffmpeg presets are weird)'
echo '* add go back option to some scripts'
echo '* seperate additional options as more page (this page)'
echo '* new versioning scheme, starting v0.1'
echo '* cleanup UI'
echo '* add video height to end of downloaded filename'
echo '* fix bugs (see git repo)'
echo ''
echo 'https://github.com/adithya-s-sekhar/the-termux-project'
echo ''
echo '1. Update/Reinstall'
echo ''
echo '2. Uninstall'
echo ''
echo 'Press ENTER to go back'
echo ''
echo 'Choose option: '
read i
if [ $i -eq 2 ]
then
	echo 'Do you want to uninstall (y/n): '
	read u
	if [ $u = "y" ]
	then
		cd ~
		cd the-termux-project
		sh uninstall.sh && echo
	else
		clear
		index-more
	fi
elif [ $i -eq 1 ]
then
	echo ''
	echo 'Starting update'
	echo ''
	cd $ETC >/dev/null 2>&1
	rm bash.bashrc >/dev/null 2>&1
	mv bash.bashrc.bak bash.bashrc >/dev/null 2>&1
	cd ~
	rm remote-install.sh
	curl 'https://raw.githubusercontent.com/adithya-s-sekhar/the-termux-project/master/remote-install.sh' -o remote-install.sh >/dev/null 2>&1
	sh remote-install.sh && echo
else
	clear
	index
fi
