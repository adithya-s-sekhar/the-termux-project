#!/data/data/com.termux/files/usr/bin/bash
# Author: Adithya S Sekhar
# Index page

i=4

clear
banner

echo ''
echo '1. WaStatus'
echo ''
echo '2. aria2 Manager'
echo ''
echo '3. youtube-dl'
echo ''
echo '4. Update'
echo ''
echo 'Press ENTER to skip this menu'
echo ''

read i
if [ $i -eq 1 ]
then
	wastatus
elif [ $i -eq 2 ]
then
	aria2manager
elif [ $i -eq 3 ]
then
	yt
elif [ $i -eq 4 ]
then
cd ~
curl 'https://raw.githubusercontent.com/adithya-s-sekhar/my-first-repo/testing/remote-install.sh' -o remote-install.sh
sh remote-install.sh
else
	clear
fi
